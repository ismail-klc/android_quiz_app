<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ismailkilic.quizapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.ScoresActivity"
            android:configChanges="orientation"
            android:screenOrientation="locked"/>
        <activity android:name=".views.MultiHoldActivity"
            android:configChanges="orientation"
            android:screenOrientation="locked"/>
        <activity android:name=".views.MultiActivity"
            android:configChanges="orientation"
            android:screenOrientation="locked"/>
        <activity android:name=".views.CategoryActivity"
            android:configChanges="orientation"
            android:screenOrientation="locked"/>
        <activity android:name=".views.ResultActivity"
            android:configChanges="orientation"
            android:screenOrientation="locked"/>
        <activity android:name=".views.QuestionActivity"
            android:configChanges="orientation"
            android:screenOrientation="locked"/>
        <activity android:name=".views.DifficultyActivity"
            android:configChanges="orientation"
            android:screenOrientation="locked"/>
        <activity android:name=".views.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>