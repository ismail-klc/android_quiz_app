<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".views.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        app:srcCompat="@drawable/quiz2" />

    <Button
        android:id="@+id/btnStart"
        android:onClick="handleStart"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.85"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:paddingStart="5dp"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintBottom_toTopOf="@id/btnMulti"
        android:paddingEnd="40dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.09"
        android:drawableLeft="@drawable/ic_play"
        android:background="@drawable/button_background"
        android:text="Start" />

    <Button
        android:id="@+id/btnMulti"
        android:onClick="handleMulti"
        android:layout_gravity="center"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.85"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:paddingStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnStart"
        app:layout_constraintBottom_toTopOf="@id/btnInfinity"
        android:paddingEnd="40dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.09"
        android:drawableLeft="@drawable/ic_group"
        android:background="@drawable/button_background"
        android:text="Multiplayer" />

    <Button
        android:id="@+id/btnInfinity"
        android:onClick="handleInf"
        android:layout_gravity="center"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.85"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:paddingStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMulti"
        app:layout_constraintBottom_toTopOf="@id/btnScores"
        android:paddingEnd="40dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.09"
        android:drawableLeft="@drawable/ic_infinity"
        android:background="@drawable/button_background"
        android:text="Infinity" />

    <Button
        android:id="@+id/btnScores"
        android:onClick="handleScores"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.85"
        android:paddingStart="10dp"
        android:paddingEnd="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnInfinity"
        app:layout_constraintBottom_toTopOf="@id/btnAbout"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_achieve"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.09"
        android:background="@drawable/button_background"
        android:text="Scores" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:onClick="handleAbout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnScores"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintBottom_toBottomOf="parent"
        android:drawableLeft="@drawable/ic_info"
        android:background="@android:color/transparent"
        android:textColor="#FFFFFF"
        android:text="About"/>

</androidx.constraintlayout.widget.ConstraintLayout>