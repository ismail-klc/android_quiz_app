<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".views.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        app:srcCompat="@drawable/quiz2" />

    <Button
        android:id="@+id/btnStart"
        android:onClick="handleStart"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:paddingStart="5dp"
        android:paddingEnd="40dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_play"
        android:background="@drawable/button_background"
        android:text="Start" />

    <Button
        android:id="@+id/btnMulti"
        android:onClick="handleMulti"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="40dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_group"
        android:background="@drawable/button_background"
        android:text="Multiplayer" />

    <Button
        android:id="@+id/btnScores"
        android:onClick="handleScores"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:textAllCaps="false"
        android:paddingStart="10dp"
        android:paddingEnd="40dp"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_achieve"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:text="Scores" />

    <Button
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_info"
        android:background="@android:color/transparent"
        android:textColor="#FFFFFF"
        android:text="About"/>




</LinearLayout>