<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".views.DifficultyActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="40dp"
        android:textColor="@android:color/white"
        android:text="Select Difficulty" />

    <Button
        android:id="@+id/btnDiffEasy"
        android:layout_gravity="center"
        android:onClick="handleSelectDifficulty"
        android:layout_marginTop="65dp"
        android:layout_width="300dp"
        android:textAllCaps="false"
        android:hint="easy"
        android:paddingStart="10dp"
        android:paddingEnd="40dp"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_easy"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:text="Easy" />

    <Button
        android:id="@+id/btnDiffMedium"
        android:layout_gravity="center"
        android:onClick="handleSelectDifficulty"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:textAllCaps="false"
        android:paddingStart="10dp"
        android:paddingEnd="40dp"
        android:hint="medium"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_medium"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:text="Medium" />

    <Button
        android:id="@+id/btnHard"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:onClick="handleSelectDifficulty"
        android:layout_width="300dp"
        android:textAllCaps="false"
        android:paddingStart="10dp"
        android:paddingEnd="40dp"
        android:textSize="20dp"
        android:hint="hard"
        android:drawableLeft="@drawable/ic_hard"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:text="Hard" />


    <Button
        android:id="@+id/btnDiffMisc"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:onClick="handleSelectDifficulty"
        android:layout_width="300dp"
        android:textAllCaps="false"
        android:paddingStart="10dp"
        android:paddingEnd="40dp"
        android:textSize="20dp"
        android:hint=""
        android:drawableLeft="@drawable/ic_any_diff"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:text="Any Difficulty" />

</LinearLayout>