<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".views.DifficultyActivity">

    <TextView
        android:id="@+id/txtPickDiff"
        android:layout_width="0dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btnDiffEasy"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@android:color/white"
        android:text="Select Difficulty" />

    <Button
        android:id="@+id/btnDiffEasy"
        android:layout_gravity="center"
        android:onClick="handleSelectDifficulty"
        android:layout_width="0dp"
        android:layout_marginTop="65dp"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtPickDiff"
        app:layout_constraintBottom_toTopOf="@id/btnDiffMedium"
        android:textAllCaps="false"
        app:layout_constraintVertical_chainStyle="spread"
        android:hint="easy"
        android:paddingStart="10dp"
        android:paddingEnd="40dp"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_easy"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:text="Easy" />

    <Button
        android:id="@+id/btnDiffMedium"
        android:layout_gravity="center"
        android:onClick="handleSelectDifficulty"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDiffEasy"
        app:layout_constraintBottom_toTopOf="@id/btnHard"
        android:textAllCaps="false"
        android:paddingStart="10dp"
        android:paddingEnd="40dp"
        android:hint="medium"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_medium"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:text="Medium" />

    <Button
        android:id="@+id/btnHard"
        android:layout_gravity="center"
        android:onClick="handleSelectDifficulty"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDiffMedium"
        app:layout_constraintBottom_toBottomOf="@id/btnDiffMisc"
        android:textAllCaps="false"
        android:paddingStart="10dp"
        android:paddingEnd="40dp"
        android:textSize="20dp"
        android:hint="hard"
        android:drawableLeft="@drawable/ic_hard"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:text="Hard" />


    <Button
        android:id="@+id/btnDiffMisc"
        android:layout_gravity="center"
        android:onClick="handleSelectDifficulty"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnHard"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"
        android:layout_marginBottom="150dp"
        android:paddingStart="10dp"
        android:paddingEnd="40dp"
        android:textSize="20dp"
        android:hint=""
        android:drawableLeft="@drawable/ic_any_diff"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:text="Misc" />

</androidx.constraintlayout.widget.ConstraintLayout>